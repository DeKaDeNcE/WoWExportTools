<Window x:Class="OBJExporterUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OBJExporterUI"
        mc:Ignorable="d"
        Icon="Resources/icon32.png"
        ContentRendered="Window_ContentRendered"
        Title="OBJ Exporter" Height="600" Width="600">
    <Grid>
        <Image x:Name="loadingImage" Source="Resources/icon.png" Margin="234,235,234,187"/>
        <TextBox x:Name="filterTextBox" Visibility="Hidden" HorizontalAlignment="Stretch" Height="23" Margin="10,22,10,0" TextWrapping="Wrap" ToolTip="Type something here to filter.." VerticalAlignment="Top" TextChanged="FilterBox_TextChanged"/>
        <ProgressBar x:Name="progressBar" Visibility="Visible" HorizontalAlignment="Stretch" Height="36" Margin="10,33,10,0" VerticalAlignment="Top" />
        <Label x:Name="loadingLabel" Content="Loading WoW client..." HorizontalAlignment="Center" Margin="10,33,10,0" VerticalAlignment="Top" Width="572" HorizontalContentAlignment="Center" Height="36" VerticalContentAlignment="Center"/>
        <TabControl x:Name="tabs" Margin="0,50,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Hidden">
            <TabItem x:Name="ModelsTab" Header="Models">
                <Grid>
                    <CheckBox Checked="CheckBoxChanged" Unchecked="CheckBoxChanged" IsChecked="True" x:Name="wmoCheckBox" Content="WMOs" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <CheckBox Checked="CheckBoxChanged" Unchecked="CheckBoxChanged" IsChecked="True" x:Name="m2CheckBox" Content="M2s" HorizontalAlignment="Left" Margin="71,10,0,0" VerticalAlignment="Top"/>
                    <ListBox x:Name="modelListBox" SelectionMode="Extended" SelectionChanged="modelListBox_SelectionChanged" HorizontalAlignment="Stretch" Margin="10,30,10,53" VerticalAlignment="Stretch" ItemsSource="{Binding}"></ListBox>
                    <Button x:Name="exportButton" Height="25" Content="Export model to OBJ!" HorizontalAlignment="Stretch" Margin="297,0,10,10" VerticalAlignment="Bottom" Click="exportButton_Click"/>
                    <Button x:Name="previewButton"  Height="25" Content="Preview model" HorizontalAlignment="Stretch" Margin="10,0,300,10" VerticalAlignment="Bottom" Click="previewButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TexturesTab" Header="Textures" GotFocus="TexturesTab_GotFocus">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <ListBox Grid.Row="0" x:Name="textureListBox" SelectionMode="Extended" SelectionChanged="textureListBox_SelectionChanged" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" ItemsSource="{Binding}"></ListBox>
                    <Image Grid.Row="1" x:Name="blpImage" Margin="10,0,10,40"/>
                    <Button Grid.Row="1" x:Name="exportTextureButton" Height="25" Content="Export texture to PNG!" HorizontalAlignment="Stretch" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="exportTextureButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="MapsTab" Header="Maps" GotFocus="MapsTab_GotFocus">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Grid.Row="0" Grid.ColumnSpan="2" x:Name="mapListBox" SelectionMode="Extended" SelectionChanged="mapListBox_SelectionChanged" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" ItemsSource="{Binding}"></ListBox>
                    <Image x:Name="tileImage" Grid.Column="1" Grid.Row="1" />
                    <ListBox x:Name="tileListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0"  SelectionChanged="tileListBox_SelectionChanged"/>
                    <Button Grid.Row="2" Grid.ColumnSpan="2" x:Name="exportTileButton" Height="25" Content="Export maptile" HorizontalAlignment="Stretch" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="exportTileButton_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
        <DockPanel>
            <Menu Name="MainMenu" DockPanel.Dock="Top" Height="20" IsEnabled="False">
                <MenuItem Header="_File">
                    <MenuItem Name="MenuPreferences" Header="_Preferences" Click="MenuPreferences_Click"/>
                    <MenuItem Name="MenuQuit" Header="_Quit" Click="MenuQuit_Click" />
                </MenuItem>
                <MenuItem Header="_Tools">
                    <MenuItem Name="MenuListfile" Header="_Update Listfile" Click="MenuListfile_Click" IsEnabled="False"></MenuItem>
                </MenuItem>
                <MenuItem Header="_About">
                    <MenuItem Name="MenuVersion" Header="_Version" Click="MenuVersion_Click"></MenuItem>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
